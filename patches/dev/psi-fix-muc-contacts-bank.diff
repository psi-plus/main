+
+void MUCContactList::setStatus(const Jid &j, Status s)
+{
+	MUCContact *mc = mclist.value(j.full());
+	if (mc) {
+		bool turn = (s.isAvailable() != mc->status.isAvailable());
+		mc->status = s;
+		if (turn) {
+			if (s.isAvailable())
+				incRef(j);
+			else
+				decRef(j);
+		}
+	}
+	else if (s.isAvailable()) {
+		incRef(j);
+		mclist.value(j.full())->status = s;
+	}
