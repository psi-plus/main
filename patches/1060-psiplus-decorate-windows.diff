+		else if(isLeftButton && isDrag && !isResize && !border) {
+			window->setCursor(QCursor(Qt::ArrowCursor));
+			window->move( event->globalPos() - movepath );
+		}
+		BaseClass::mouseMoveEvent(event);
+	}
