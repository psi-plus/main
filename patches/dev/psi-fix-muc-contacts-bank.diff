+void MUCContactList::incRef(const Jid &j)
+{
+	if (j.resource().isEmpty())
+		return;
+
+	MUCContact *mc = mclist.value(j.full());
+	if (!mc) {
+		mc = new MUCContact;
+		mc->refcount = 1;
+		mc->status = Status();
+		mclist[j.full()] = mc;
+	}
+	else
+		++mc->refcount;
+}
+
+void MUCContactList::decRef(const Jid &j)
+{
+	if (j.resource().isEmpty())
+		return;
+
+	MUCContact *mc = mclist.value(j.full());
+	if (mc && --mc->refcount == 0) {
+			mclist.remove(j.full());
+			delete mc;
+	}
+}
+
+Status MUCContactList::status(const Jid &j) const
+{
+	MUCContact *mc = mclist.value(j.full());
+	if (mc)
